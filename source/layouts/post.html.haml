- wrap_layout :layout do
  %article
    .title
      %time= simple_date(current_page.date)
      %h1= current_page.data.title
    = yield


    - if current_page.data.tags
      %ul.tags
        %li= link_to current_page.date.year, blog_year_path(current_page.date.year)
        - current_page.data.tags.each do |tag|
          %li= link_to tag, "tags/#{tag}.html"


  - prev_article = current_article.previous_article
  - next_article = current_article.next_article
  %ul.pagination.post-pagination
    - if prev_article
      %li.prev
        = link_to prev_article.url do
          .pagination-direction.ss-navigateleft Previous
          %p= prev_article.title

    - if next_article
      %li.next
        = link_to next_article.url do
          .pagination-direction.ss-navigateright.right Next
          %p= next_article.title

