%h1.title Contact

%form{action: "http://post.eick.us/post.php", method: "POST", id: "contactForm"}
  :javascript
    document.write('<input type="hidden" name="valid" value="1" />');

  .control-group
    %label{for: "email"} Email:
    %input#email{type: "email", name: "email"}
  .control-group
    %label{for: "subject"} Subject:
    %input#subject.input-text{type: "text", name: "subject"}
  .control-group
    %label{for: "message"} Message:
    %textarea#message{name: "message", rows: "15", cols: "40"}
  %input.button{type: "submit"}
